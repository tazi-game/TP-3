<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/file_contents_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="FILE CONTENTS"/>

    <TextView
        android:id="@+id/file_contents_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_contents_label"
        android:textColor="#000"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/edite_file_contents_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/file_contents_textView"
        android:layout_alignParentEnd="true"
        android:text="Edite file\ncontent"/>

    <Button
        android:id="@+id/create_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/file_contents_textView"
        android:text="Create new\nFile"/>

</RelativeLayout>